model User {
    id    Int         @id @default(autoincrement())
    name  String      @unique
    posts QuotePost[] // relation to QuotePost

    @@schema("originstack-supabase-schema")
}

model QuotePost {
    id        Int      @id @default(autoincrement())
    content   String
    views     Int      @default(0)
    createdAt DateTime @default(now())
    user      User     @relation(fields: [userId], references: [id])
    userId    Int

    @@schema("originstack-supabase-schema")
}
